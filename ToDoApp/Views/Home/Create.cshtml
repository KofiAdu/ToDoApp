@model TodoList
@{
    ViewData["Title"] = "Add";
}

<form method="post">
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" asp-for="Title" placeholder="Title"/>
    </div>
    <div class="form-group">
        <label>Description</label>
         <textarea class="form-control" asp-for="Description" rows="3"></textarea>
    </div>
    <br />
   <button type="submit">Add Item</button>
</form>